@model Models.Home

@{
  var modelId = Html.IdForModel();
  var repeaterRowId = $"{modelId}_repeaterRow";
  var homeContentCardHeaderId = $"{modelId}_homeContentCardHeader";
  var homeContentId = $"{modelId}_homeContent";
  var addButtonId = $"{modelId}_addButton";
}

@Html.HiddenFor(m => m.HomeId)
<div id="@repeaterRowId" class="row" data-repeater-row="@modelId">
  <div class="col">
    <div class="card mb-1">
      <div class="card-header alert-danger" id="@homeContentCardHeaderId">
        <a data-toggle="collapse" href="#@homeContentId">
          >>> Home: @Model.Number
        </a>
      </div>
      <div id="@homeContentId" class="collapse">
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group row">
                <label asp-for="Number" class="control-label"></label>
                <div class="col">
                  <input asp-for="Number" class="form-control" />
                </div>
                <span asp-validation-for="Number" class="text-danger"></span>
              </div>
            </div>
          </div>
          @Html.EditorFor(m => m.Rooms)
          <div class="row">
            <button id="@addButtonId" type="button" class="btn btn-outline-warning"
                    data-repeater-add-button=""
                    data-repeater-id="@Html.IdFor(m => m.Rooms)"
                    data-repeater-name="@Html.NameFor(m => m.Rooms)">
              Add Room
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>